<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.PointLight?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Sphere?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="480.0" prefWidth="853.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ChooseController">
   <children>
      <Button fx:id="button" layoutX="311.0" layoutY="354.0" onMouseClicked="#buttonAction" prefHeight="73.0" prefWidth="250.0" text="Start Game">
         <font>
            <Font name="IPAMincho" size="38.0" />
         </font></Button>
      <ColorPicker fx:id="colorPicker1" layoutX="67.0" layoutY="100.0" onAction="#setColor" />
      <ColorPicker fx:id="colorPicker2" layoutX="645.0" layoutY="100.0" onAction="#setColor" />
      <TextField fx:id="player1Name" layoutX="67.0" layoutY="128.0" onKeyReleased="#setName" promptText="Player1" />
      <TextField fx:id="player2Name" layoutX="619.0" layoutY="128.0" onKeyReleased="#setName" promptText="Player2" />
      <Label fx:id="startScreen" layoutX="66.0" layoutY="-1.0" prefHeight="102.0" prefWidth="724.0" text="Please choose your names and your prefered colors then press to the Start Game button to start!" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="DejaVu Sans Bold" size="23.0" />
         </font></Label>
      <PointLight fx:id="light1" color="CHARTREUSE" layoutX="152.0" layoutY="192.0" lightOn="true" />
      <Sphere fx:id="sphere1" layoutX="439.0" layoutY="251.0" radius="100.0" />
      <PointLight fx:id="light2" color="CHARTREUSE" layoutX="717.0" layoutY="189.0" lightOn="true" />
   </children>
</AnchorPane>
